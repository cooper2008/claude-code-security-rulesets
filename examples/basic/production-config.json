      "**/gcp/**",
      "**/.gcp/**",
      "**/database*/**",
      "**/db*/**",
      "Execute(sudo)",
      "Execute(su)",
      "Execute(rm -rf)",
      "Execute(rm -f)",
      "Execute(chmod +x /usr/**)",
      "Execute(chmod +x /bin/**)",
      "Execute(chmod +x /sbin/**)",
      "Execute(systemctl)",
      "Execute(service)",
      "Execute(chown)",
      "Execute(passwd)",
      "Execute(usermod)",
      "Execute(userdel)",
      "Execute(groupmod)",
      "Execute(crontab)",
      "Execute(at)",
      "Network(*.internal)",
      "Network(*.local)",
      "Network(localhost:*)",
      "Network(127.0.0.1:*)",
      "Network(10.*)",
      "Network(172.16.*)",
      "Network(192.168.*)",
      "Write(/etc/**)",
