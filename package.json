{
  "name": "claude-code-security-rulesets",
  "version": "1.0.2",
  "description": "A CLI tool and enterprise platform for generating, validating, and deploying Claude Code security configurations with zero-bypass deny enforcement",
  "main": "dist/index.js",
  "bin": {
    "claude-security": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --testPathPattern=performance",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:quick": "node scripts/benchmark.js -i 10 -w 1",
    "benchmark:validation": "node scripts/benchmark.js --category validation",
    "benchmark:cli": "node scripts/benchmark.js --category cli",
    "benchmark:cache": "node scripts/benchmark.js --category cache",
    "benchmark:concurrent": "node scripts/benchmark.js --category concurrency",
    "benchmark:scale": "node scripts/benchmark.js --category scale",
    "benchmark:critical": "node scripts/benchmark.js --priority critical",
    "benchmark:report": "open benchmark/results/latest.html",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "clean": "rm -rf dist coverage benchmark/results",
    "prepare": "npm run build",
    "prepack": "npm run clean && npm run build",
    "validate": "npm run lint && npm run test && npm run build",
    "prepublishOnly": "npm run validate",
    "release:patch": "npm version patch && git push --tags",
    "release:minor": "npm version minor && git push --tags",
    "release:major": "npm version major && git push --tags",
    "release:prerelease": "npm version prerelease --preid=beta && git push --tags"
  },
  "keywords": [
    "claude-code",
    "security",
    "rulesets",
    "cli",
    "enterprise",
    "validation",
    "configuration",
    "ai-governance",
    "zero-bypass",
    "deny-enforcement"
  ],
  "author": "cooper2008",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.6",
    "joi": "^17.11.0",
    "json-schema": "^0.4.0",
    "jsonschema": "^1.4.1",
    "vm2": "^3.9.19",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.8",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cooper2008/claude-code-security-rulesets.git"
  },
  "bugs": {
    "url": "https://github.com/cooper2008/claude-code-security-rulesets/issues"
  },
  "homepage": "https://github.com/cooper2008/claude-code-security-rulesets#readme"
}
