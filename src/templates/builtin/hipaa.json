{
  "id": "hipaa",
  "name": "HIPAA Compliance",
  "category": "compliance",
  "rules": {
    "permissions": {
      "deny": [
        "exec *",
        "shell *",
        "eval *",
        "rm -rf *",
        "format *",
        "delete *",
        "drop database",
        "sudo *",
        "chmod 777 *",
        "git push --force",
        "npm publish",
        "docker run --privileged",
        "curl *",
        "wget *",
        "ssh *",
        "scp *",
        "rsync *",
        "env *",
        "printenv",
        "cat /etc/passwd",
        "cat /etc/shadow",
        "access phi data without authorization",
        "export phi data",
        "print phi data",
        "email phi data",
        "copy phi data to external storage",
        "screenshot phi data",
        "share phi data",
        "modify patient records without audit",
        "disable phi logging",
        "bypass phi access controls"
      ],
      "ask": [
        "git push",
        "npm script *",
        "docker run",
        "network request *",
        "read phi data",
        "write phi data",
        "access patient records",
        "modify system config",
        "backup data",
        "restore data",
        "generate reports",
        "export anonymized data",
        "access audit logs"
      ],
      "allow": [
        "read approved files",
        "write approved files",
        "test *",
        "build *",
        "lint *",
        "audit *",
        "log actions",
        "read audit logs",
        "encrypt data",
        "decrypt authorized data",
        "validate input",
        "sanitize data",
        "authenticate users",
        "authorize access",
        "anonymize data"
      ]
    },
    "metadata": {
      "version": "1.0.0",
      "timestamp": 1704067200000,
      "name": "HIPAA Compliance Template",
      "environment": "production"
    }
  },
  "description": "HIPAA compliant security policies for healthcare organizations handling Protected Health Information (PHI). Ensures privacy, security, and breach notification requirements.",
  "compliance": ["HIPAA"],
  "version": "1.0.0",
  "createdAt": "2024-01-01T00:00:00.000Z",
  "updatedAt": "2024-01-01T00:00:00.000Z",
  "tags": ["hipaa", "healthcare", "compliance", "phi", "privacy"],
  "isBuiltIn": true,
  "parameters": [
    {
      "name": "encryptionRequired",
      "type": "boolean",
      "description": "Require PHI encryption at rest and in transit",
      "required": true,
      "defaultValue": true
    },
    {
      "name": "accessLogging",
      "type": "boolean",
      "description": "Log all PHI access and modifications",
      "required": true,
      "defaultValue": true
    },
    {
      "name": "coveredEntity",
      "type": "string",
      "description": "Type of HIPAA covered entity",
      "required": true,
      "validation": {
        "enum": ["healthcare_provider", "health_plan", "healthcare_clearinghouse", "business_associate"]
      }
    },
    {
      "name": "minimumNecessary",
      "type": "boolean",
      "description": "Enforce minimum necessary access rule",
      "required": false,
      "defaultValue": true
    },
    {
      "name": "breachNotificationDays",
      "type": "number",
      "description": "Days to report breach notification",
      "required": false,
      "defaultValue": 60,
      "validation": {
        "min": 1,
        "max": 60
      }
    },
    {
      "name": "retentionYears",
      "type": "number",
      "description": "PHI retention period in years",
      "required": false,
      "defaultValue": 6,
      "validation": {
        "min": 6,
        "max": 50
      }
    },
    {
      "name": "authorizedUsers",
      "type": "array",
      "description": "List of users authorized to access PHI",
      "required": false,
      "defaultValue": [],
      "validation": {
        "minLength": 0,
        "maxLength": 1000
      }
    }
  ]
}